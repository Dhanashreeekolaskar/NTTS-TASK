@model IEnumerable<ProjectTask.Models.Category>

@using ProjectTask.Controllers.Api

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>


<div class="left">

    <a href="@Url.Action("CategoryForm", "Category")" class="btn btn-success">Add</a>
</div>



<br />

<table class=" table table-striped table-bordered table-hover ">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>

        <th>Edit</th>

        <th>Delete</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) 

                
            </td>

            <td><button data-Categories-id="@item.CategoryId  " class="btn btn-link js-delete">Delete</button></td>
        </tr>
    }

</table>
