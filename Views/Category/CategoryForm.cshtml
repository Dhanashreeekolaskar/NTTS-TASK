@model ProjectTask.Models.Category
@{
    ViewBag.Title = "CategoryForm";
}

<h2>CategoryForm</h2>

@using (Html.BeginForm("Save", "Category"))
{
    <div class=" form-group">
        @Html.LabelFor(x=>x.CategoryId)
        @Html.TextBoxFor(x=>x.CategoryId, new  { @class="form-control"})

    </div>

    <div class="form-group">
        @Html.LabelFor(x=>x.CategoryName)
        @Html.TextBoxFor(x => x.CategoryName, new {@class="form-control"})



    </div>

    

    <button type="submit" class="btn btn-success" >Save</button>
}


